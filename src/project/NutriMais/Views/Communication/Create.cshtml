@model NutriMais.Models.CommunicationModel

@{
    ViewData["Title"] = "NutriMais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Incluir Mensagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" type="text"  id="nome" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone"  type="text"  id="telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" type="text" id="descricao" class="form-control" style="height:100px;"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option>Email</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px">
                <p>
                    <button onclick="getMessage()"  class="btn btn-primary">Enviar</button>
                </p>
            </div>
        </form>
    </div>
</div>
<div style="width:100%; margin-left:auto; display:flex; justify-content:flex-end"><a target="_blank" href='https://api.whatsapp.com/send?phone=5531987358907'>
    <img src="~/imgs/layout/icon-whatsApp.png" style="width:100px" class="figure-img" alt="WhatsApp">
</a>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}   
<script>
    function getMessage() {
        const telefone = document.getElementById('telefone').value;
        const descricao = document.getElementById('descricao').value;
        const sub = 'Email de solicitação de contato';
        const nome = document.getElementById('nome').value;
        const body = " Nome: " + nome + '%0D%0A Conteudo: ' + descricao + '%0D%0A Telefone: ' +telefone;
        const link = "mailto:nutrimais.no.reply@gmail.com?subject=" + sub +"&body="+body;
        if (telefone != '' && descricao != '' && nome != '') {            
            window.open(link)
        } 
    }
</script>
}
